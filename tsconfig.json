{
  "compilerOptions": {
    /* Next default options. */
    "target": "es5",
    "lib": [
      "dom", "dom.iterable", "esnext",
      // Add this! Doing so adds WebWorker and ServiceWorker types to the global.
      "webworker"
    ],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "@app/*": ["./app/*"],
      "@test/*": ["./__tests__/*"],
      "@public/*": ["./public/*"]
    },

    /* Make compiler more strict. */
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "types": [
      // This allows Serwist to type `window.serwist`.
      "@serwist/next/typings"
    ]
  },
  "include": [
    // Declarations
    "next-env.d.ts",
    ".config/declarations",

    // TypeScript + JSX
    "**/*.ts", "**/*.tsx",

    // Next.js types
    ".next/types/**/*.ts",

    // Config
    ".config/.dev/scripts/utils/**/*.ts",
    ".config/.dev/scripts/**/*.ts",
    ".config/.dev/data/**/*.ts",
    ".config/**/*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
  ],
  "exclude": ["node_modules", "public/sw.js"],
}
